<style>
  code {
    margin: 0 .2rem;
    font-size: 90%;
    white-space: nowrap;
    background: #F1F1F1;
    border: 1px solid #E1E1E1;
    border-radius: 4px;
    text-align: left;
  }

  pre > code {
    display: block;
    padding: 1rem 1.5rem;
    white-space: pre;
    width: 500px;

  }

  pre {
    width: 100%;
  }
</style>

<pre>
  <code>{{code}}</code>

  <!-- Note that this will fail if the code is longer than 2000 chars -->
  <form action={{runURL}}>
    <input style="display:none" type="text" name="code" value="{{inputCode}}">
    <input type="submit" value="Submit">
  </form>
</pre>
