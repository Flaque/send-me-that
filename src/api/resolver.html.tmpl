<table class="codeContainer" style="width: 100%;">
  <tr><code style="margin: 10px;
  font-size: 90%;
  white-space: nowrap;
  border: 1px solid #E1E1E1;
  border-radius: 4px;
  text-align: left;
  display: block;
  padding: 1rem 1.5rem;
  white-space: pre;
  width: 500px;">{{code}}</code></tr>

  <tr>
    <a href="{{runURL}}?code={{inputCode}}" style="margin-left: 10px;
    display: inline-block;
    height: 38px;
    padding: 0 30px;
    color: white;
    text-align: center;
    font-size: 11px;
    font-weight: 600;
    line-height: 38px;
    letter-spacing: .1rem;
    text-transform: uppercase;
    text-decoration: none;
    white-space: nowrap;
    background-color: #3498db;
    border-radius: 4px;
    border: 1px solid #3498db;
    cursor: pointer;
    box-sizing: border-box;
    font-family: Helvetica;"> Run </a>
  </tr>
</table>
